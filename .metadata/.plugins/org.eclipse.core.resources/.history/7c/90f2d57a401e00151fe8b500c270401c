package conversion;

import java.util.logging.Logger;

import main.DfmObject;
import main.RhUiModernizer;

public abstract class AConversionRule {
    static Logger log = Logger.getLogger(AConversionRule.class.getName());
    
    public void apply(DfmObject dfmObject) {
        if (!isApplicable(dfmObject))
            return;

        log.info("Applying " + this.getClass().getName());
        doApply(dfmObject);
    }

    abstract public boolean isApplicable(DfmObject dfmObject);

    abstract protected void doApply(DfmObject dfmObject);

}
